<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FactsBee.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FactsBee"
    xmlns:pages="clr-namespace:FactsBee.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Category Facts"
        ContentTemplate="{DataTemplate pages:CategoryFactsPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Fact Details"
        ContentTemplate="{DataTemplate pages:FactDetailsPage}"
        Route="MainPage" />

</Shell>
